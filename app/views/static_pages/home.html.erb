<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/tweet_form' %>
      </section>
    </aside> 
    <div class="span8">
      <h3>Post Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome</h1>
    <h2> to </h2>
    <h2>Extraordinary Conceptions Community
    </h2>
    <%= link_to "Sign up now!" , signup_path,
                                 class: "btn btn-large btn-primary" %>
  </div>

<% end %>

